<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".presentation.MainActivity">

    <Button
        android:id="@+id/btn_movies"
        android:layout_width="match_parent"
        android:text="Movies"
        android:textSize="40sp"
        android:layout_margin="20dp"
        android:backgroundTint="@android:color/black"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btn_artists"
        android:layout_width="match_parent"
        android:text="Artists"
        android:textSize="40sp"
        android:layout_margin="20dp"
        android:backgroundTint="@android:color/black"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="match_parent"
        android:text="Tv Shows"
        android:textSize="40sp"
        android:layout_margin="20dp"
        android:backgroundTint="@android:color/black"
        android:layout_height="100dp" />

    <com.lenibonje.artistes.presentation.customView.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        circle:circle_background = "@android:color/holo_orange_dark"
        circle:onCenter = "true"
        circle:circle_radius = "50dp"
        />

</LinearLayout>